<div class="row">

<br>
 <% @produtos.each do |produto| %>

<% 20.times do %>
  <div class="col-sm-5 col-md-3">
    <div class="thumbnail">
    <%for foto in produto.fotoproduto %>
      <img src="<%=foto.imagem.url(:thumb)%>" alt="...">
    <%end%>
      <div class="caption">
        <h3 style="color:#4d7592"><%=produto.nome%></h3>
        <p><%=produto.tituloanuncio%></p>
      </div>
    </div>
  </div>
  <%end%>
<%end%>

</div>

<style media="screen">

  .thumbnail {
    border-width:2px;
  }

  .thumbnail:hover {
      border-style:solid;
      border-color:#4d7592;
  }
</style>

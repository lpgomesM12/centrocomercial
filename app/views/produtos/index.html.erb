<p id="notice"><%= notice %></p>

<h1>Listing Produtos</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Tituloanuncio</th>
      <th>Precoatacado</th>
      <th>Precovarejo</th>
      <th>Descricao</th>
      <th>Qtd atacado</th>
      <th>Categoriaproduto</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @produtos.each do |produto| %>
      <tr>
        <td><%= produto.nome %></td>
        <td><%= produto.tituloanuncio %></td>
        <td><%= produto.precoatacado %></td>
        <td><%= produto.precovarejo %></td>
        <td><%= produto.descricao %></td>
        <td><%= produto.qtd_atacado %></td>
        <td><%= produto.categoriaproduto %></td>
        <td><%= link_to 'Show', produto %></td>
        <td><%= link_to 'Edit', edit_produto_path(produto) %></td>
        <td><%= link_to 'Destroy', produto, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<div class='nested-fields'>
 <div class="row">  
  <%if f.object.new_record? %>
        <div class="col-lg-10" >
            <%= f.file_field :imagem, :class => "btn btn-default btn-sm"%>
         </div>
   <%end%> 
   
  <% unless f.object.new_record? %>
    <div class="col-lg-6" >
        <%= link_to image_tag(f.object.imagem.url(:thumb)),
        f.object.imagem.url(:original)%>
    </div>
  <%end%>   

  <div class="col-lg-2">
     <%= link_to_remove_association f, :class => "btn btn-default btn-sm" do %>
       <span class="glyphicon glyphicon-trash"></span> Deletar
     <%end%>
    </div>
   </div> 
</div>



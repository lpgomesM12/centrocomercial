<p id="notice"><%= notice %></p>

<div class="panel panel-default">
  <div class="panel-body">

<h3>Lista Empresas</h3>

<div class="table-responsive">
<table class="table table-hover">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Centroscomercial</th>
      <th>Cnpj</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @empresas.each do |empresa| %>
      <tr>
        <td><%= empresa.nome %></td>
        <td><%= empresa.centroscomercial.nome %></td>
        <td><%= empresa.cnpj %></td>


        <td align='right'> 
              <%= link_to empresa, class: "btn btn-default btn-sm" do %>
                <span style="color:green" class="glyphicon glyphicon-list-alt"></span> Exibir
            <% end %>             
            <%= link_to edit_empresa_path(empresa), class: "btn btn-default btn-sm" do %>
              <span style="color:blue" class="glyphicon glyphicon-pencil"></span> Editar
            <% end %>
            <%= link_to empresa, method: :delete, data: { confirm: 'Deseja excluir o registro?' }, class: "btn btn-default btn-sm" do %>
                    <span  style="color:red"  class="glyphicon glyphicon-trash"></span> Excluir
            <% end %>                  
          </td> 

      </tr>
    <% end %>
  </tbody>
</table>

</div>

<br>

</div>
</div>

 <%= link_to new_empresa_path, class: "btn btn-default btn-sm" do %>
      <span style="color:green" class="glyphicon glyphicon-plus"></span> Novo
  <% end %>

<p id="notice"><%= notice %></p>
<div class="panel panel-default">
  <div class="panel-heading">Empresa</div>
  <div class="panel-body">
<p>
  <strong>Nome:</strong>
  <%= @empresa.nome %>
</p>

<p>
  <strong>Cnpj:</strong>
  <%= @empresa.cnpj %>
</p>

<p>
  <strong>Centroscomercial:</strong>
  <%= @empresa.centroscomercial.nome %>
</p>

<p>
  <strong>Informacao:</strong>
  <%= @empresa.informacao %>
</p>

<p>
  <strong>Fraseempresa:</strong>
  <%= @empresa.fraseempresa %>
</p>

<p>
  <strong>Endereco:</strong>
  <%= @empresa.endereco.endereco %>
</p>

</div>
</div>

<div class="row mar-bot40">
  <div class="col-lg-8" > 
  <div class="btn-group">
      <%= link_to edit_empresa_path(@empresa), :class => "btn btn-default btn-sm" do %>
          <span class="glyphicon glyphicon-pencil"></span> Editar
        <% end %>
      <%= link_to empresas_path, :class => "btn btn-default btn-sm" do %>
          <span class="glyphicon glyphicon-arrow-left"></span> Voltar
        <% end %>
  </div>
   </div>
</div>

